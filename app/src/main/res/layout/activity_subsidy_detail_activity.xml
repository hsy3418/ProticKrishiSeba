<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.oxfam.protickrishiseba.SubsidyDetailActivity"
>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Information/Image to be displayed"
        android:id="@+id/detail_info"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:background="#50BD78"
        android:id="@+id/subsidy_cover_service_btn"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/detail_info"
        android:layout_centerHorizontal="true"
        android:text="Service Covered" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enrolling_process"
        android:background="#50BD78"
        android:textColor="#ffffff"
        android:id="@+id/subsidy_process_btn"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/subsidy_cover_service_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#50BD78"
        android:textColor="#ffffff"
        android:text="Apply for the scheme"
        android:onClick="checkEligibility"
        android:id="@+id/subsidy_check_btn"
        android:layout_below="@+id/subsidy_process_btn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
